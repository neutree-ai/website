---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const title = `${post.data.title} - Neutree Blog`;
const description = post.data.description ?? "Neutree blog post";
---

<Layout title={title} description={description}>
  <Header />

  <main class="page">
    <div class="container">
      <article class="article">
        <header class="article-header">
          <div class="meta">
            <a class="back" href="/blog">‚Üê Back to Blog</a>
            <time datetime={post.data.pubDate.toISOString()}>
              {
                post.data.pubDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                  day: "2-digit",
                })
              }
            </time>
          </div>
          {
            post.data.coverImage ? (
              <div class="cover">
                <img
                  class="cover-img"
                  src={post.data.coverImage}
                  alt={post.data.coverAlt ?? post.data.title}
                />
              </div>
            ) : null
          }
          <h1 class="title">{post.data.title}</h1>
        </header>

        <div class="content">
          <Content />
        </div>
      </article>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .page {
    padding: var(--spacing-5xl) var(--padding-horizontal-desktop);
    background-color: var(--color-bg-subtle);
  }

  .container {
    max-width: var(--max-width-content);
    margin: 0 auto;
  }

  .article {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-3xl);
  }

  .article-header {
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--spacing-xl);
  }

  .cover {
    width: 100%;
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--color-border);
    background: rgba(12, 40, 73, 0.03);
    margin-bottom: var(--spacing-xl);
  }

  .cover-img {
    width: 100%;
    height: auto;
    display: block;
  }

  .meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-md);
    color: var(--color-text-tertiary);
    font-family: var(--font-mono);
    font-size: 14px;
    margin-bottom: var(--spacing-md);
  }

  .back {
    color: var(--color-text-secondary);
  }

  .back:hover {
    color: var(--color-text-primary);
  }

  .title {
    font-size: 44px;
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
    margin: 0;
  }

  .subtitle {
    margin-top: var(--spacing-md);
    margin-bottom: 0;
    max-width: var(--max-width-text);
  }

  .tags {
    margin-top: var(--spacing-md);
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    padding: 2px 10px;
    border: 1px solid var(--color-border);
    border-radius: 999px;
    background: var(--color-bg);
    color: var(--color-text-secondary);
    font-family: var(--font-mono);
    font-size: 13px;
  }

  .content :global(h2) {
    margin-top: 32px;
    font-size: 28px;
  }

  .content :global(h3) {
    margin-top: 24px;
    font-size: 22px;
  }

  .content :global(p) {
    margin-top: 14px;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-top: 14px;
    padding-left: 22px;
    color: var(--color-text-secondary);
  }

  .content :global(li) {
    margin: 6px 0;
  }

  .content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.95em;
    background: rgba(12, 40, 73, 0.06);
    padding: 0 6px;
    border-radius: 6px;
  }

  .content :global(pre) {
    margin-top: 16px;
    padding: 16px;
    overflow: auto;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: rgba(12, 40, 73, 0.03);
  }

  .content :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .content :global(a) {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    display: block;
    margin: auto 0;
    border-radius: var(--radius-md);
  }

  @media (max-width: 1279px) {
    .page {
      padding: var(--spacing-4xl) var(--padding-horizontal-tablet);
    }

    .article {
      padding: var(--spacing-2xl);
    }

    .title {
      font-size: 36px;
    }
  }

  @media (max-width: 767px) {
    .page {
      padding: var(--spacing-3xl) var(--padding-horizontal-mobile);
    }

    .article {
      padding: var(--spacing-xl);
    }

    .meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .title {
      font-size: 30px;
    }
  }
</style>
