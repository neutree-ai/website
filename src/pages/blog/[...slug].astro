---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

const title = `${post.data.title} - Neutree Blog`;
const description = post.data.description ?? "Neutree blog post";
---

<Layout title={title} description={description}>
  <Header />

  <main class="page">
    <div class="layout">
      <article class="article">
        <header class="article-header">
          <div class="meta">
            <a class="back" href="/blog">‚Üê Back to Blog</a>
            <time datetime={post.data.pubDate.toISOString()}>
              {
                post.data.pubDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                  day: "2-digit",
                })
              }
            </time>
          </div>
          {
            /* {
            post.data.coverImage ? (
              <div class="cover">
                <img
                  class="cover-img"
                  src={post.data.coverImage}
                  alt={post.data.coverAlt ?? post.data.title}
                />
              </div>
            ) : null
          } */
          }
          <h1 class="title">{post.data.title}</h1>
        </header>

        <div class="content">
          <Content />
        </div>
      </article>

      {
        headings.length > 0 && (
          <aside class="toc-sidebar">
            <nav class="toc">
              <h4 class="toc-title">On this page</h4>
              <ul class="toc-list">
                {headings.map((heading) => (
                  <li class={`toc-item toc-item-${heading.depth}`}>
                    <a href={`#${heading.slug}`}>{heading.text}</a>
                  </li>
                ))}
              </ul>
            </nav>
          </aside>
        )
      }
    </div>
  </main>

  <!-- Image Lightbox -->
  <div class="lightbox" id="lightbox">
    <button class="lightbox-close" id="lightbox-close">&times;</button>
    <img class="lightbox-img" id="lightbox-img" src="" alt="" />
  </div>

  <Footer />
</Layout>

<style>
  .page {
    padding: var(--spacing-5xl) var(--padding-horizontal-desktop);
    background-color: var(--color-bg-subtle);
  }

  .layout {
    max-width: calc(var(--max-width-content) + 280px);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 240px;
    gap: var(--spacing-2xl);
    align-items: start;
  }

  .article {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-3xl);
  }

  .article-header {
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--spacing-xl);
  }

  .cover {
    width: 100%;
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--color-border);
    background: rgba(12, 40, 73, 0.03);
    margin-bottom: var(--spacing-xl);
  }

  .cover-img {
    width: 100%;
    height: auto;
    display: block;
  }

  .meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-md);
    color: var(--color-text-tertiary);
    font-family: var(--font-mono);
    font-size: 14px;
    margin-bottom: var(--spacing-md);
  }

  .back {
    color: var(--color-text-secondary);
  }

  .back:hover {
    color: var(--color-text-primary);
  }

  .title {
    font-size: 44px;
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
    margin: 0;
  }

  .subtitle {
    margin-top: var(--spacing-md);
    margin-bottom: 0;
    max-width: var(--max-width-text);
  }

  .tags {
    margin-top: var(--spacing-md);
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    padding: 2px 10px;
    border: 1px solid var(--color-border);
    border-radius: 999px;
    background: var(--color-bg);
    color: var(--color-text-secondary);
    font-family: var(--font-mono);
    font-size: 13px;
  }

  .content :global(h2) {
    margin-top: 32px;
    font-size: 28px;
  }

  .content :global(h3) {
    margin-top: 24px;
    font-size: 22px;
  }

  .content :global(p) {
    margin-top: 14px;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-top: 14px;
    padding-left: 22px;
    color: var(--color-text-secondary);
  }

  .content :global(li) {
    margin: 6px 0;
  }

  .content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.95em;
    background: rgba(12, 40, 73, 0.06);
    padding: 0 6px;
    border-radius: 6px;
  }

  .content :global(pre) {
    margin-top: 16px;
    padding: 16px;
    overflow: auto;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: rgba(12, 40, 73, 0.03);
  }

  .content :global(pre code) {
    background: transparent;
    padding: 0;
  }

  .content :global(a) {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(img) {
    max-width: min(100%, 600px);
    height: auto;
    display: block;
    margin: 16px auto;
    border-radius: var(--radius-md);
    cursor: zoom-in;
    transition: opacity 0.2s;
  }

  .content :global(img:hover) {
    opacity: 0.9;
  }

  @media (max-width: 1279px) {
    .page {
      padding: var(--spacing-4xl) var(--padding-horizontal-tablet);
    }

    .article {
      padding: var(--spacing-2xl);
    }

    .title {
      font-size: 36px;
    }
  }

  @media (max-width: 767px) {
    .page {
      padding: var(--spacing-3xl) var(--padding-horizontal-mobile);
    }

    .article {
      padding: var(--spacing-xl);
    }

    .meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .title {
      font-size: 30px;
    }
  }

  /* TOC Sidebar */
  .toc-sidebar {
    position: sticky;
    top: 100px;
  }

  .toc {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
  }

  .toc-title {
    margin: 0 0 var(--spacing-md) 0;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0;
    line-height: 1.4;
  }

  .toc-item a {
    display: block;
    padding: 6px 0;
    color: var(--color-text-secondary);
    font-size: 14px;
    text-decoration: none;
    transition: color 0.2s;
  }

  .toc-item a:hover {
    color: var(--color-text-primary);
  }

  .toc-item-3 {
    padding-left: 12px;
  }

  .toc-item-4 {
    padding-left: 24px;
  }

  /* Lightbox */
  .lightbox {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0);
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px;
    pointer-events: none;
    opacity: 0;
    transition:
      background 0.3s,
      opacity 0.3s;
  }

  .lightbox.active {
    background: rgba(0, 0, 0, 0.9);
    pointer-events: auto;
    opacity: 1;
  }

  .lightbox-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    border-radius: var(--radius-md);
    transform: scale(0.9);
    opacity: 0;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }

  .lightbox.active .lightbox-img {
    transform: scale(1);
    opacity: 1;
  }

  .lightbox-close {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    color: white;
    font-size: 24px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
  }

  .lightbox-close:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 1279px) {
    .layout {
      grid-template-columns: 1fr;
    }

    .toc-sidebar {
      display: none;
    }
  }
</style>

<script>
  // Image Lightbox
  const lightbox = document.getElementById("lightbox");
  const lightboxImg = document.getElementById(
    "lightbox-img",
  ) as HTMLImageElement;
  const lightboxClose = document.getElementById("lightbox-close");
  const contentImages = document.querySelectorAll(".content img");

  contentImages.forEach((img) => {
    img.addEventListener("click", () => {
      if (lightbox && lightboxImg) {
        lightboxImg.src = (img as HTMLImageElement).src;
        lightboxImg.alt = (img as HTMLImageElement).alt;
        lightbox.classList.add("active");
        document.body.style.overflow = "hidden";
      }
    });
  });

  const closeLightbox = () => {
    if (lightbox) {
      lightbox.classList.remove("active");
      document.body.style.overflow = "";
    }
  };

  lightboxClose?.addEventListener("click", closeLightbox);
  lightbox?.addEventListener("click", (e) => {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      closeLightbox();
    }
  });
</script>
